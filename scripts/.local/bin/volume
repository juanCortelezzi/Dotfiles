#!/bin/bash

# no args
if [[ ${#} -lt 2 ]]; then
    echo "error in arguments, up | down | mute, dwmblock signal ID"
    exit
fi

action="$1"
signalID="$2"

case "$action" in
    up)
        pulsemixer --change-volume +10
        ;;
    down)
        pulsemixer --change-volume -10
        ;;
    mute)
        pulsemixer --toggle-mute
        ;;
    *)
        echo "argument is not up | down | mute"
        exit
        ;;
esac
pkill -RTMIN+"$signalID" dwmblocks
